{
  "name": "pokerverse",
  "private": true,
  "workspaces": [
    "packages/*",
    "pokerverse-miniapp"
  ],
  "scripts": {
    "contracts:install": "npm -w packages/contracts i",
    "contracts:build": "npm -w packages/contracts run build",
    "contracts:deploy": "npm -w packages/contracts run deploy",
    "backend:dev": "npm -w packages/backend run dev",
    "frontend:dev": "npm -w packages/frontend run dev",
    "backend:test": "npm -w packages/backend run test",
    "build:core": "npm -w packages/core-game run build && npm -w packages/core-ws run build",
    "dev:web": "npm -w packages/frontend run dev",
    "dev:mini": "npm -w pokerverse-miniapp run dev"
  }
}


