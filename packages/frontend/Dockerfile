FROM node:20-alpine AS deps
WORKDIR /app
COPY package*.json ./
# Lock dosyası bulunmadığında ci yerine install kullan
RUN npm install --omit=dev

FROM node:20-alpine AS build
WORKDIR /app
ARG NEXT_PUBLIC_WC_PROJECT_ID
ARG NEXT_PUBLIC_RPC_URL
ARG NEXT_PUBLIC_USDC
ARG NEXT_PUBLIC_BET
ARG NEXT_PUBLIC_CHIPBANK
ARG NEXT_PUBLIC_BACKEND_URL
ENV NEXT_PUBLIC_WC_PROJECT_ID=${NEXT_PUBLIC_WC_PROJECT_ID}
ENV NEXT_PUBLIC_RPC_URL=${NEXT_PUBLIC_RPC_URL}
ENV NEXT_PUBLIC_USDC=${NEXT_PUBLIC_USDC}
ENV NEXT_PUBLIC_BET=${NEXT_PUBLIC_BET}
ENV NEXT_PUBLIC_CHIPBANK=${NEXT_PUBLIC_CHIPBANK}
ENV NEXT_PUBLIC_BACKEND_URL=${NEXT_PUBLIC_BACKEND_URL}
COPY --from=deps /app/node_modules ./node_modules
COPY . .
RUN npm run build

FROM node:20-alpine AS runtime
WORKDIR /app
ENV NODE_ENV=production
COPY --from=build /app .
EXPOSE 3000
CMD ["npm", "start"]


